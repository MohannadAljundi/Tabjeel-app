<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:padding="10dp">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="435dp"
		app:cardBackgroundColor="@color/white"
		app:cardCornerRadius="6dp"
		app:cardElevation="0dp"
		app:contentPadding="1dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:layout_gravity="center"
				app:cardCornerRadius="5dp"
				android:layout_marginBottom="10dp">

				<TextView
					android:id="@+id/send_program_item_txt_card"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:text="برنامج سند"
					android:fontFamily="@font/hacen_casablanca_light"
					android:textColor="@color/white"
					android:textSize="40sp"
					android:textStyle="bold"
					android:background="#9C27B0"/>

				<androidx.appcompat.widget.SwitchCompat
					android:id="@+id/checked_button_snd_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="20dp"
					android:visibility="gone" />

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:layout_gravity="center"
				app:cardCornerRadius="5dp"
				android:layout_marginBottom="10dp">

				<TextView
					android:id="@+id/offer_item_txt"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:text="الخدمات"
					android:fontFamily="@font/hacen_casablanca_light"
					android:textColor="@color/white"
					android:textSize="40sp"
					android:textStyle="bold"
					android:background="#2196F3" />

				<androidx.appcompat.widget.SwitchCompat
					android:id="@+id/checked_button_offer_btn_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="20dp"
					android:visibility="gone" />

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:layout_gravity="center"
				app:cardCornerRadius="5dp"
				android:layout_marginBottom="10dp">

				<TextView
					android:id="@+id/courses_item_txt"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:text="الدورات"
					android:fontFamily="@font/hacen_casablanca_light"
					android:textColor="@color/white"
					android:textSize="40sp"
					android:textStyle="bold"
					android:background="#009688" />

				<androidx.appcompat.widget.SwitchCompat
					android:id="@+id/checked_button_courses_btn_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="20dp"
					android:visibility="gone" />

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:layout_gravity="center"
				app:cardCornerRadius="5dp">

				<TextView
					android:id="@+id/e_store_item_txt"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:text="المتجر اللاكتروني"
					android:fontFamily="@font/hacen_casablanca_light"
					android:textColor="@color/white"
					android:textSize="40sp"
					android:textStyle="bold"
					android:background="#FF9800" />

				<androidx.appcompat.widget.SwitchCompat
					android:id="@+id/checked_button_e_store_btn_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="20dp"
					android:visibility="gone" />

			</androidx.cardview.widget.CardView>

		</LinearLayout>



	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>