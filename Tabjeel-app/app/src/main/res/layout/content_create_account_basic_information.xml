            <RadioGroup
                android:checkedButton="@+id/gender_male"
                android:id="@+id/toggle"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gender_btn_out_line"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/gender_female"
                    android:background="@drawable/gender_toggle_widget_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:fontFamily="@font/hacen_casablanca_light"
                    android:text="انثى"
                    android:textSize="20sp"
                    android:textColor="@color/white" />

                <RadioButton
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/gender_male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gender_toggle_widget_background"
                    android:button="@null"
                    android:gravity="center"
                    android:fontFamily="@font/hacen_casablanca_light"
                    android:text="ذكر"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
            </RadioGroup>

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">
            <EditText
                android:id="@+id/date_picker"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/create_account_2_btn"
                android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawableRight="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hacen_casablanca_light"
                android:hint="تاريخ الميلاد"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">

            <EditText
                android:id="@+id/user_type_spinner"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/create_account_2_btn"
                android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawableRight="@drawable/ic_baseline_people_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hacen_casablanca_light"
                android:hint="نوع المستخدم"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>


