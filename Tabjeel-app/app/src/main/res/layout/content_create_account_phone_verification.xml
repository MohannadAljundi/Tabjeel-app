<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateAccount.CreateAccountPhoneVerification"
    tools:showIn="@layout/activity_create_account_phone_verification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <RelativeLayout style="@style/profileDetailsLayout">

            <TextView
                android:id="@+id/phone_verification_explanatory_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="ادخل الرمز الذي وصلك في رسالة نصية"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/phone_verification_message_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="تم التحقق"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/green_grows"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/phone_verification_message_not_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="الرمز خطأ"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/Red"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

        <RelativeLayout style="@style/profileDetailsLayout">

            <com.chaos.view.PinView
                android:id="@+id/pinView_verification"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp"
                app:itemCount="6"
                app:itemHeight="48dp"
                app:itemRadius="10dp"
                app:lineColor="@color/colorPrimaryDark"
                app:viewType="rectangle"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اعادة الارسال"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="لم يصلك الرمز؟"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/verification_pin_conform_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/create_account_shadow_btn"
                    android:text="تأكيد" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout style="@style/profileDetailsLayout">

            <ProgressBar
                android:id="@+id/verification_pin_conform_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout style="@style/profileDetailsLayout"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/create_account_btn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/create_accoutt_btn"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hacen_casablanca_light"
                android:text="إنشاء حساب"
                android:textColor="#000"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>




        <View style="@style/proifleDetailsView" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
